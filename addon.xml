<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="script.video.randomtrailers"
       name="Random Trailers"
       version="2.0.1-alpha"
       provider-name="fbacher">
    <requires>
        <import addon="xbmc.python" version="2.26.0"/>
        <import addon="xbmc.addon" version="18.0.701"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.module.xbmcswift2" version="2.4.0"/>
        <import addon="script.module.future" version="0.16.0.4"/>
        <!-- <import addon="script.module.typing" version="0.0.1.1"/> -->
        <import addon="script.module.pydevd" version="3.4.1"/>
        <import addon="script.module.requests" version="2.21.0"/>
        <import addon="script.module.six" version="1.11.0"/>
        <import addon="script.module.kodi65" version="1.2.1"/>
        <import addon="script.module.kodi-six" version="0.1.0"/>
        <import addon="script.module.addon.signals" version="0.0.3"/>
        <import addon="script.service.randomtrailers.backend" version="2.0.1-alpha"/>
    </requires>

    <extension point="xbmc.python.script" library="resources/lib/random_trailers_main.py">
        <provides>video</provides>
    </extension>
    <!-- <extension point="xbmc.service"                library="resources/lib/service.py" start="login" /> -->
    <extension point="xbmc.ui.screensaver" library="resources/lib/screensaver.py"/>
    <!-- <extension point="xbmc.service" library="resources/lib/screensaver.py" start="login"/> -->

    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <platform>all</platform>
        <summary lang="en_us">Plays Random Trailers from Multiple Sources</summary>
        <description lang="en_us">Plays random movie trailers from a variety of sources:[CR]-The Users Movie
            Library[CR]-Apple iTunes[CR]-YouTube(via themoviedb.org)[CR]-A user specified folder[CR]
            Installs as a Screensaver and a Program. There are Options to filter by genre, and Rating, select number of
            trailers, hide trailers of watched movies, and display opening / closing animations.
            When viewing trailers you can press UP or I to view movie information and DOWN or I to hide. RIGHT or X will
            display next trailer. LEFT or ESC will exit. If the current playing trailer is from
            the users movie library hitting enter or return will play the associated movie.
        </description>
        <disclaimer lang="en_us"></disclaimer>
        <language>en_us</language> <!-- the language of the videos the plugin provides, may be left blank -->
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <forum>http://forum.xbmc.org/showthread.php?tid=167276</forum>
        <website></website>
        <email>fbacher@brisbin.net</email>
        <source>https://github.com/fbacher/script.video.randomtrailers</source>
        <news>v1.2.3 (01/02/201x)
            [new] some new feature
            [fix] some fix
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <banner></banner>
            <clearlogo></clearlogo>
            <screenshot>resources/screenshots/Movie Details.png</screenshot>
            <screenshot>resources/screenshots/Trailer With Title.png</screenshot>
            <screenshot>resources/screenshots/Settings Common 1.png.png</screenshot>
            <screenshot>resources/screenshots/Settings Remote Trailers.png</screenshot>
            <screenshot>resources/screenshots/Settings Genre 1.png</screenshot>
            <screenshot>resources/screenshots/Settings Library.png</screenshot>
            <screenshot>resources/screenshots/Settings TMDB 1.png</screenshot>
            <screenshot>resources/screenshots/Settings iTunes.png</screenshot>
            <screenshot>resources/screenshots/Settings Folder.png</screenshot>
            <screenshot>resources/screenshots/Settings Cache 1.png</screenshot>
            <screenshot>resources/screenshots/Settings Advanced.png</screenshot>


        </assets>
    </extension>
</addon>


