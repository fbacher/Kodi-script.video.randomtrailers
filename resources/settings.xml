        <setting id="tmdb_year_range_minimum" type="number" enable="eq(-8,true) + eq(-1,true)" label="Minimum year"/>
        <setting id="tmdb_year_range_maximum" type="number" enable="eq(-9,true) + eq(-2,true)" label="Maximum year"/>
