    </category>
    <category label="Cache">
        <setting label="Downloaded Data Cache" type="lsep"/>
        <setting id="use_remote_data_cache" type="bool" label="Cache Remote Query Results" default="true"/>
        <setting id="remote_db_cache_path" enable="eq(-1,true)" label="Data Cache Path" type="folder" source=""
                 option="writeable"
                 default="special://userdata/addon_data/script.video.randomtrailers/cache"/>
        <setting id="json_cache_expiration_days" enable="eq(-2,true)" type="number"
                 label="Maximum Days to Keep Cached Movie Data"
                 default="30"/>

        <setting label="Downloaded Media Cache" type="lsep"/>
        <setting id="use_trailer_cache" type="bool" label="Cache Downloaded Media" default="true"/>
        <setting id="trailer_cache_path" type="folder" label="Media Cache Path" source=""
                 option="writeable" enable="eq(-1,true)"
                 default="special://userdata/addon_data/script.video.randomtrailers/cache"/>
        <setting id="trailer_cache_expiration_days" enable="eq(-2,true)" type="number"
                 label="Maximum Days to Keep Cached Media"
                 default="30"/>

        <setting label="Data Cache Size Limits" type="lsep"/>
        <setting id="limit_cached_json" enable="eq(-8,true)" type="bool" label="Limit Data Disk Usage" default="false"/>
        <setting id="limit_number_of_cached_json_files" enable="eq(-9,true) + eq(-1,true)" type="bool"
                 label="Limit Number of Data Files" default="false"/>
        <setting id="max_number_of_cached_json_files" type="number" enable="eq(-10,true) + eq(-2,true) + eq(-1,true)"
                 label="Maximum Number of Data Files" default="1000"/>
        <setting id="limit_size_of_cached_json_disk" enable="eq(-11,true) + eq(-3,true)" type="bool"
                 label="Limit Size of Data Cache"
                 default="false"/>
        <setting id="max_size_of_cached_json_disk" type="number" enable="eq(-12,true) + eq(-4,true) + eq(-1,true)"
                 label="Maximum Size of Data Cache (MB)" default="50"/>
        <setting id="limit_percent_of_cached_json_disk" enable="eq(-13,true) + eq(-5,true)" type="bool"
                 label="Limit Filesystem % for Data Cache" default="false"/>
        <setting id="max_percent_of_cached_json_disk" type="number" enable="eq(-14,true) + eq(-6,true) + eq(-1,true)"
                 label="Maximum % of Filesystem for Data Cache" default="5"/>

        <setting label="Media Cache Size Limits" type="lsep"/>
        <setting id="limit_cached_trailers" enable="eq(-12,true)" type="bool" label="Limit Trailer Disk Usage"
                 default="false"/>
        <setting id="limit_number_of_cached_trailers" enable="eq(-13,true) + eq(-1,true)" type="bool"
                 label="Limit Number of Media Files"
                 default="false"/>
        <setting id="max_number_of_cached_trailers" type="number" enable="eq(-14,true) + eq(-2,true) + eq(-1,true)"
                 label="Maximum Number of Media Files" default="1000"/>
        <setting id="limit_size_of_cached_trailers" enable="eq(-15,true) + eq(-3,true)" type="bool"
                 label="Limit Size of Media Cache"
                 default="false"/>
        <setting id="max_size_of_cached_trailers" type="number" enable="eq(-16,true) + eq(-4,true) + eq(-1,true)"
                 label="Maximum Size of Media Cache (MB)" default="1024"/>
        <setting id="limit_percent_of_cached_trailers" enable="eq(-17,true) + eq(-5,true)" type="bool"
                 label="Limit Filesystem % for Media Cache" default="false"/>
        <setting id="max_percent_of_cached_trailers" type="number" enable="eq(-18,true) + eq(-6,true) + eq(-1,true)"
                 label="Maximum % of Filesystem for Media Cache" default="25"/>
