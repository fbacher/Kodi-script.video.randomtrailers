        <setting id="include_old_movie_trailers" type="bool" enable="eq(-6,true)"
                 label="Download trailers for old movies"
                 default="false"/>
        <setting id="tmdb_enable_select_by_year_range" type="bool" enable="eq(-7,true) + eq(-1,true)"
